<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
            <meta content="width=device-width, initial-scale=1" name="viewport">
                <title>
                    {% block title %}{% endblock %}
                </title>
                <link href="{{ assets('css/bulma.min.css') }}" rel="stylesheet"/>
               <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
                {% block style %}

                {% endblock %}
            </meta>
        </meta>
    </head>
    <body>
        <div id="app">
            <nav aria-label="main navigation" class="navbar" role="navigation">
                <div class="navbar-brand">
                    <a class="navbar-item" href="{{ router('home') }}">
                        <img height="40" src="{{ public('favicon.png') }}" width="112">
                        </img>
                    </a>
                    <a aria-expanded="false" aria-label="menu" class="navbar-burger burger" data-target="navbarBasicExample" role="button">
                        <span aria-hidden="true">
                        </span>
                        <span aria-hidden="true">
                        </span>
                        <span aria-hidden="true">
                        </span>
                    </a>
                </div>
                <div class="navbar-menu" id="navbarBasicExample">
                    <div class="navbar-start">
                        <a class="navbar-item" href="{{ router('home') }}">
                            Home
                        </a>
                    </div>
                    <div class="navbar-end">
                        <div class="navbar-item">
                            <div class="buttons">
                                <div class="navbar-item has-dropdown is-hoverable">
                                    <a class=" button is-primary is-small navbar-link">
                                        {{ name() }}
                                    </a>
                                    <div class="navbar-dropdown is-right">
                                        <a class="navbar-item">
                                            Perfil
                                        </a>
                                        <a class="navbar-item">
                                            Tareas
                                        </a>
                                        <hr class="navbar-divider">
                                            <a class="navbar-item">
                                                Reportar fallas
                                            </a>
                                        </hr>
                                    </div>
                                </div>
                                <a class="button is-danger is-small" href="{{ router('logout') }}" onclick="event.preventDefault(); document.getElementById('salir').submit();">
                                    Salir
                                </a>
                                <form action="{{ router('logout') }}" id="salir" method="POST">
                                    {{ csrf() }}
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
            <br>
            <div class="container">
                {% block body %}
                {% endblock %}
            </div>
        </div>
        {% block scripts %}
        <script src="{{ assets('js/bundle.js') }}">
        </script>
        {% endblock %}
    </body>
</html>
